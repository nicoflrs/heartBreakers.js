{
  "manifest_version": 3,
  "name": "Cupid's Arrow",
  "description": "Shoot for love",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_icon": "./assets/icon.png"
  },
  "permissions" : [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "js": ["script.js"],
      "css": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "assets/*.png" ],
      "matches": [ "<all_urls>" ]
    }]
}
